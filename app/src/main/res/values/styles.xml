<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- TEXTS -->

    <style name="textStyleNormal">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/texto_normal</item>
    </style>

    <style name="textStyleTitle">
        <item name="android:textSize">@dimen/text_size_titulo</item>
        <item name="android:textColor">@color/texto_principal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">.1</item>
    </style>

    <style name="textStyleSubtitle">
        <item name="android:textSize">@dimen/text_size_subtitulo</item>
        <item name="android:textColor">@color/texto_normal</item>
    </style>

    <style name="textStyleAuxiliar">
        <item name="android:textSize">@dimen/text_size_auxiliar</item>
        <item name="android:textColor">@color/texto_ayudas</item>
    </style>

    <style name="textStyleAuxiliar.Details">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="textButtonsStyle">
        <item name="android:textSize">@dimen/text_size_botones</item>
    </style>
    
    <!-- BUTTONS -->

    <style name="styleMainButtons">
        <item name="android:background">@drawable/background_main_buttons</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="borderRound">200dp</item>
    </style>

    <style name="saveButtonStyle">
        <item name="android:color">@color/white</item>
    </style>

    <style name="deleteButtonStyle">
        <item name="android:color">@color/white</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <style name="editButtonStyle">
        <item name="android:background">@color/botones_secundarios</item>
    </style>


    <!-- BACKGROUNDS -->

    <style name="backgroundStyleNormal">
        <item name="android:background">@color/fondo_general</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="backgroundStyleSections">
        <item name="android:background">@color/fondo_general</item>
        <item name="android:padding">10dp</item>
    </style>

    <!-- LABELS -->

    <style name="labelStyle">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:background">@drawable/background_image_view_items</item>
        <item name="android:textColor">@color/texto_normal</item>
        <item name="android:textColorHint">#828282</item>
    </style>

    <style name="searchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@drawable/background_search_view</item>
        <item name="android:textColorHint">@color/texto_normal</item>
        <item name="android:editTextColor">@color/texto_normal</item>
        <item name="android:searchIcon">@drawable/ic_search</item>
    </style>

    <!-- LAYOUT ELEMENTS -->
    <style name="textViewProductStyle">
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:textColor">@color/texto_ayudas</item>
        <item name="android:textSize">@dimen/text_size_auxiliar</item>
    </style>

    <style name="textViewTutorialStyle">
        <item name="android:textColor">@color/texto_ayudas</item>
        <item name="android:textSize">@dimen/text_size_auxiliar</item>
    </style>

    <style name="textViewMCProductStyle">
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:textColor">@color/texto_ayudas</item>
        <item name="android:textSize">@dimen/text_size_auxiliar</item>
    </style>

    <style name="textViewTopSellsStyle">
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:textColor">@color/texto_ayudas</item>
        <item name="android:textSize">@dimen/text_size_auxiliar</item>
    </style>

    <style name="textViewLabelDetailsStyle">
        <item name="android:textColor">@color/texto_normal</item>
        <item name="android:textSize">@dimen/text_size_auxiliar</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="textViewValueDetailsStyle">
        <item name="android:textColor">@color/texto_normal</item>
        <item name="android:textSize">@dimen/text_size_auxiliar</item>
    </style>

    <style name="editTextValueStyle" >
        <item name="android:textColor">@color/texto_normal</item>
        <item name="android:textSize">@dimen/text_size_auxiliar</item>
        <item name="android:textColorHint">@color/texto_normal</item>
    </style>

    <style name="spinnerStyle">
        <item name="android:textColor">@color/texto_normal</item>
    </style>

</resources>