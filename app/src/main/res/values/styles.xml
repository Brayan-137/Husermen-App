<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="textStyleNormal">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/texto_normal</item>
    </style>

    <style name="textStyleNormal.PequeÃ±o">
        <item name="android:textSize">@dimen/text_size_auxiliar</item>
    </style>

    <style name="textStyleTitle">
        <item name="android:textSize">@dimen/text_size_titulo</item>
        <item name="android:textColor">@color/texto_principal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">.1</item>
    </style>

    <style name="textStyleSubtitle">
        <item name="android:textSize">@dimen/text_size_subtitulo</item>
        <item name="android:textColor">@color/texto_normal</item>
    </style>

    <style name="textStyleAuxiliar">
        <item name="android:textSize">@dimen/text_size_auxiliar</item>
        <item name="android:textColor">@color/texto_ayudas</item>
    </style>

    <style name="textStyleAuxiliar.Details">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="styleMainButtons">
        <item name="android:textSize">@dimen/text_size_botones</item>
        <item name="android:textColor">@color/boton_primario</item>
        <item name="android:background">@color/botones_principales</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">6dp</item>
        <item name="borderRound">200dp</item>
    </style>

    <style name="textStyleSecondaryButtons">
        <item name="android:textSize">@dimen/text_size_botones</item>
        <item name="android:textColor">@color/boton_secundario</item>
    </style>

    <style name="backgroundStyleNormal">
        <item name="android:background">@color/fondo_general</item>
        <item name="android:padding">40dp</item>
    </style>

    <style name="backgroundStyleSections">
        <item name="android:background">@color/fondo_general</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="labelStyle">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:background">@color/fondos_tarjetas</item>
        <item name="android:textColor">@color/texto_normal</item>
        <item name="android:textColorHint">#828282</item>
    </style>


</resources>