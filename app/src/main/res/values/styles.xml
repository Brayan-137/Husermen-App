<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="textStyleNormal">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="color">@color/texto_normal</item>
    </style>

    <style name="textStyleTitle">
        <item name="android:textSize">@dimen/text_size_titulo</item>
        <item name="color">@color/texto_principal</item>
    </style>

    <style name="textStyleSubtitle">
        <item name="android:textSize">@dimen/text_size_subtitulo</item>
        <item name="color">@color/texto_normal</item>
    </style>

    <style name="textStyleAuxiliar">
        <item name="android:textSize">@dimen/text_size_auxiliar</item>
        <item name="color">@color/texto_ayudas</item>
    </style>

    <style name="styleMainButtons">
        <item name="android:textSize">@dimen/text_size_botones</item>
        <item name="color">@color/boton_primario</item>
        <item name="android:background">@color/botones_principales</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="textStyleSecondaryButtons">
        <item name="android:textSize">@dimen/text_size_botones</item>
        <item name="color">@color/boton_secundario</item>
    </style>



</resources>